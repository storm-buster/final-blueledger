{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "^/(.*)$", "dest": "/index.html" }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_GEMINI_API_KEY": "@gemini_api_key"
  },
  "functions": {
    "server/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}
