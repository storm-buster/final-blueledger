# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Storage Configuration
STORAGE_BUCKET=project-submissions

# ML Model Paths
MODELS_DIR=./models
MANGROVE_MODEL_PATH=./models/mangrove_verification.pkl
BIOMASS_MODEL_PATH=./models/xgb_biomass_booster.json
TEMPORAL_MODEL_PATH=./models/temporal_change.pkl

# ML Thresholds
MANGROVE_THRESHOLD=0.7
TEMPORAL_GROWTH_THRESHOLD=0.1

# Carbon Calculation Constants
CARBON_FRACTION=0.47
CO2_EQUIVALENT=3.67
RISK_BUFFER_PERCENT=0.15

# Background Task Configuration
USE_CELERY=false
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Blockchain / Smart Contracts (see SMART_CONTRACTS_INTEGRATION.md)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
# Deploy contracts first (smart contracts/), then set addresses:
CARBON_REGISTRY_ADDRESS=0x...
ORACLE_CONSUMER_ADDRESS=0x...
CARBON_CREDIT_TOKEN_ADDRESS=0x...
PRIVATE_KEY=your-private-key
# Legacy alias (optional)
CONTRACT_ADDRESS=0x...

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
RATE_LIMIT_ENABLED=true
MAX_UPLOAD_SIZE_MB=100

# Logging
LOG_LEVEL=INFO
